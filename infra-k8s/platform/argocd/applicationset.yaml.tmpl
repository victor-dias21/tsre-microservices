apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: tsre-applications
  namespace: argocd
spec:
  generators:
    - list:
        elements:
          - name: platform-gateway-api
            namespace: gateway-system
            path: infra-k8s/platform/gateway-api
          - name: platform-datadog
            namespace: datadog
            path: infra-k8s/platform/datadog
          - name: tsre-microservices
            namespace: tsre
            path: infra-k8s/apps/tsre-microservices
  template:
    metadata:
      name: '{{name}}'
    spec:
      project: tsre-platform
      source:
        repoURL: __REPO_URL__
        targetRevision: main
        path: '{{path}}'
      destination:
        server: https://kubernetes.default.svc
        namespace: '{{namespace}}'
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
          - CreateNamespace=true
